package sorting.programmers;

public class Solution_K {

	public static void main(String[] args) {
		int array[] = new int[] {1,5,2,6,3,7,4};
		int[][] commands = new int[][] {{2,5,3},{4,4,1},{1,7,3}};
		
	}
	
	public void solution(int[] array , int[][] commands) {
		
		for(int i = 0; i < commands.length; i++) {
			int s = commands[i][0];
			int e = commands[i][1];
			int k = commands[i][2];
			
			int[] array_temp = new int[e-s];  
			int cnt = 0;
			
			//배열 자르기
			for(int j = s-1; j < e; j++) {
				array_temp[cnt] = array[j];
				cnt++;
			}
			
			//버블 정렬
			bubbleSort(array_temp,k);
			
		}
		
	}
	
	public int bubbleSort(int[]a, int k) {
		for(int n = 0; n < a.length-1; n++) {
			int idx = 0;
			for(int p = n; p < a.length-1; p++) {
				if(a[n] > a[n+1]) {
					int temp = a[n];
					a[n] = a[n+1];
					a[n+1] = temp;
					idx++;
				}
			}
			
			if(idx == 0) {
				break;
			}
		}
		
		return a[k];
	}
}
